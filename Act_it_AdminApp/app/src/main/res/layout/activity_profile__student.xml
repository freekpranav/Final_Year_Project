<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile_StudentActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/profile_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/homeback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:padding="5dp"
            app:backgroundTint="#FFF"
            app:fabSize="mini"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/leftarrow" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/user_icon"
            app:civ_border_color="#FFF"
            app:civ_border_width="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.385" />

        <TextView
            android:id="@+id/regno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/nunito_regular"
            android:singleLine="true"
            android:text="Register Number"
            android:textColor="#FFF"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/profile_image"
            app:layout_constraintStart_toStartOf="@+id/profile_image"
            app:layout_constraintTop_toBottomOf="@+id/profile_image" />

        <TextView
            android:id="@+id/Student_dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/nunito_regular"
            android:text="Date of Birth"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/regno"
            app:layout_constraintStart_toStartOf="@+id/regno"
            app:layout_constraintTop_toBottomOf="@+id/regno" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView9"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:elevation="20dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39999998">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/explore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:singleLine="true"
                android:text="Make a call"
                android:textColor="@color/dark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.17"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/call"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintBottom_toBottomOf="@+id/explore"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/explore"
                app:layout_constraintTop_toTopOf="@+id/explore"
                app:srcCompat="@drawable/phone_icon" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/Account_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/nunito_regular"
        android:singleLine="true"
        android:text="Account Info"
        android:textColor="@color/dark"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/cardView9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView9" />

    <ScrollView

        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="395dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
        app:layout_constraintVertical_bias="0.49">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/name_icon"
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="4dp"
                    app:layout_constraintEnd_toStartOf="@+id/textView3"
                    app:layout_constraintHorizontal_bias="0.31"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/name_icon" />

                <TextView
                    android:id="@+id/name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/nunito_regular"
                    android:text="Name"
                    android:textColor="@color/shadowColor"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.173"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/Student_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Student Name"
                    android:textColor="@color/dark"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/name_text"
                    app:layout_constraintTop_toBottomOf="@+id/name_text" />


                <ImageView
                    android:id="@+id/year_icon"
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="50dp"
                    app:layout_constraintEnd_toEndOf="@+id/name_icon"
                    app:layout_constraintStart_toStartOf="@+id/name_icon"
                    app:layout_constraintTop_toBottomOf="@+id/name_icon"
                    app:srcCompat="@drawable/name_icon" />

                <TextView
                    android:id="@+id/year_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_regular"
                    android:text="Academic Year"
                    android:textColor="@color/shadowColor"
                    app:layout_constraintBottom_toBottomOf="@+id/year_icon"
                    app:layout_constraintStart_toStartOf="@+id/Student_name"
                    app:layout_constraintTop_toTopOf="@+id/year_icon" />

                <TextView
                    android:id="@+id/Student_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Student Year"
                    android:textColor="@color/dark"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/year_text"
                    app:layout_constraintTop_toBottomOf="@+id/year_text" />


                <ImageView
                    android:id="@+id/blood_icon"
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="50dp"
                    app:layout_constraintEnd_toEndOf="@+id/year_icon"
                    app:layout_constraintStart_toStartOf="@+id/year_icon"
                    app:layout_constraintTop_toBottomOf="@+id/year_icon"
                    app:srcCompat="@drawable/blood_icon" />

                <TextView
                    android:id="@+id/blood_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_regular"
                    android:text="Blood Group"
                    android:textColor="@color/shadowColor"
                    app:layout_constraintBottom_toBottomOf="@+id/blood_icon"
                    app:layout_constraintStart_toStartOf="@+id/Student_name"
                    app:layout_constraintTop_toTopOf="@+id/blood_icon" />

                <TextView
                    android:id="@+id/Student_blood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Student Blood Group"
                    android:textColor="@color/dark"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/blood_text"
                    app:layout_constraintTop_toBottomOf="@+id/blood_text" />


                <ImageView
                    android:id="@+id/Phone_icon"
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="50dp"
                    app:layout_constraintEnd_toEndOf="@+id/blood_icon"
                    app:layout_constraintStart_toStartOf="@+id/blood_icon"
                    app:layout_constraintTop_toBottomOf="@+id/blood_icon"
                    app:srcCompat="@drawable/phone_icon" />

                <TextView
                    android:id="@+id/phone_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_regular"
                    android:text="Phone Number"
                    android:textColor="@color/shadowColor"
                    app:layout_constraintBottom_toBottomOf="@+id/Phone_icon"
                    app:layout_constraintStart_toStartOf="@+id/Student_name"
                    app:layout_constraintTop_toTopOf="@+id/Phone_icon" />

                <TextView
                    android:id="@+id/Student_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Student Phone number"
                    android:textColor="@color/dark"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/phone_text"
                    app:layout_constraintTop_toBottomOf="@+id/phone_text" />


                <ImageView
                    android:id="@+id/Parents_Phone_icon"
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="50dp"
                    app:layout_constraintEnd_toEndOf="@+id/Phone_icon"
                    app:layout_constraintStart_toStartOf="@+id/Phone_icon"
                    app:layout_constraintTop_toBottomOf="@+id/Phone_icon"
                    app:srcCompat="@drawable/phone_book" />

                <TextView
                    android:id="@+id/Parents_Phone_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_regular"
                    android:text="Parents Number"
                    android:textColor="@color/shadowColor"
                    app:layout_constraintBottom_toBottomOf="@+id/Parents_Phone_icon"
                    app:layout_constraintStart_toStartOf="@+id/Student_name"
                    app:layout_constraintTop_toTopOf="@+id/Parents_Phone_icon" />

                <TextView
                    android:id="@+id/Student_parent_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Parents Phone number"
                    android:textColor="@color/dark"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/Parents_Phone_text"
                    app:layout_constraintTop_toBottomOf="@+id/Parents_Phone_text" />


                <ImageView
                    android:id="@+id/email_icon"
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="50dp"
                    app:layout_constraintEnd_toEndOf="@+id/Parents_Phone_icon"
                    app:layout_constraintStart_toStartOf="@+id/Parents_Phone_icon"
                    app:layout_constraintTop_toBottomOf="@+id/Parents_Phone_icon"
                    app:srcCompat="@drawable/gmail_icon" />

                <TextView
                    android:id="@+id/email_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_regular"
                    android:text="E-mail"
                    android:textColor="@color/shadowColor"
                    app:layout_constraintBottom_toBottomOf="@+id/email_icon"
                    app:layout_constraintStart_toStartOf="@+id/Student_name"
                    app:layout_constraintTop_toTopOf="@+id/email_icon" />

                <TextView
                    android:id="@+id/Student_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Student Email"
                    android:textColor="@color/dark"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/email_text"
                    app:layout_constraintTop_toBottomOf="@+id/email_text" />


                <ImageView
                    android:id="@+id/type_icon"
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="50dp"
                    app:layout_constraintEnd_toEndOf="@+id/email_icon"
                    app:layout_constraintStart_toStartOf="@+id/email_icon"
                    app:layout_constraintTop_toBottomOf="@+id/email_icon"
                    app:srcCompat="@drawable/type_icon" />

                <TextView
                    android:id="@+id/type_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_regular"
                    android:text="Student Type"
                    android:textColor="@color/shadowColor"
                    app:layout_constraintBottom_toBottomOf="@+id/type_icon"
                    app:layout_constraintStart_toStartOf="@+id/Student_name"
                    app:layout_constraintTop_toTopOf="@+id/type_icon" />

                <TextView
                    android:id="@+id/Student_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Student Type"
                    android:textColor="@color/dark"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/type_text"
                    app:layout_constraintTop_toBottomOf="@+id/type_text" />


                <ImageView
                    android:id="@+id/address_icon"
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="50dp"
                    app:layout_constraintEnd_toEndOf="@+id/type_icon"
                    app:layout_constraintStart_toStartOf="@+id/type_icon"
                    app:layout_constraintTop_toBottomOf="@+id/type_icon"
                    app:srcCompat="@drawable/address_icon" />

                <TextView
                    android:id="@+id/address_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_regular"
                    android:text="Address"
                    android:textColor="@color/shadowColor"
                    app:layout_constraintBottom_toBottomOf="@+id/address_icon"
                    app:layout_constraintStart_toStartOf="@+id/Student_name"
                    app:layout_constraintTop_toTopOf="@+id/address_icon" />

                <TextView
                    android:id="@+id/Student_Address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Student Address"
                    android:textColor="@color/dark"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/address_text"
                    app:layout_constraintTop_toBottomOf="@+id/address_text" />

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="50dp"
                    app:layout_constraintEnd_toEndOf="@+id/address_icon"
                    app:layout_constraintStart_toStartOf="@+id/address_icon"
                    app:layout_constraintTop_toBottomOf="@+id/address_icon"
                    />

                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    app:cardBackgroundColor="@color/light"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintBottom_toBottomOf="@+id/Student_parent_phone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.739"
                    app:layout_constraintStart_toEndOf="@+id/Parents_Phone_text"
                    app:layout_constraintTop_toTopOf="@+id/Parents_Phone_text"
                    app:layout_constraintVertical_bias="0.45999998">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Call"
                            android:textColor="#FFF"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.25"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/parent_call"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            app:layout_constraintBottom_toBottomOf="@+id/textView2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/textView2"
                            app:layout_constraintTop_toTopOf="@+id/textView2"
                            app:srcCompat="@drawable/phone_icon" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>