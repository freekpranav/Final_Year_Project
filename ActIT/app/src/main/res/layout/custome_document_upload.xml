<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <EditText

        android:id="@+id/Reg_no_doc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@drawable/round"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Enter Your Register No"
        android:inputType="textPersonName"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText

        android:id="@+id/Year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/round"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Enter Your year"
        android:inputType="number"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="@+id/Reg_no_doc"
        app:layout_constraintStart_toStartOf="@+id/Reg_no_doc"
        app:layout_constraintTop_toBottomOf="@+id/Reg_no_doc" />

    <Spinner
        android:id="@+id/Document_type"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/roundspinner"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="@+id/Year"
        app:layout_constraintStart_toStartOf="@+id/Year"
        app:layout_constraintTop_toBottomOf="@+id/Year" />

    <Button
        android:id="@+id/choose_doc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="32dp"

        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_round_red"
        android:fontFamily="@font/nunito_semibold"
        android:text="CHOOSE"
        android:textColor="#FFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/update"
        app:layout_constraintStart_toStartOf="@+id/Document_type"
        app:layout_constraintTop_toBottomOf="@+id/Document_type"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/upload_doc"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/btn_round_red"
        android:fontFamily="@font/nunito_semibold"

        android:text="UPLOAD"
        android:textColor="#FFF"
        app:layout_constraintBottom_toBottomOf="@+id/choose_doc"
        app:layout_constraintEnd_toEndOf="@+id/Document_type"
        app:layout_constraintStart_toEndOf="@+id/choose_doc"
        app:layout_constraintTop_toTopOf="@+id/choose_doc" />

    <ImageView
        android:id="@+id/doc_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_right" />


</androidx.constraintlayout.widget.ConstraintLayout>




